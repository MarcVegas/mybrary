<h2 class="page-header">Search Authors</h2>

<form action="/authors" method="GET">
    <div class="fields">
        <div class="field">
            <label>Name</label>
            <input type="text" name="name" value="<%= searchOptions.name %>"> 
        </div>
    </div>
    <div class="fields fields-right">
        <button class="button primary" class="button primary" type="submit">Search</button>
    </div>
</form>
<br>
<% authors.forEach(author => {%>
    <div class="author-row">
        <div class="author-name"><%= author.name %> </div>
        <div class="button-row">
            <a class="button primary" href="/authors/<%= author.id %>">View</a>
            <a class="button primary" href="/authors/<%= author.id %>/edit">Edit</a>
            <%- include('../inc/deleteForm', { url: `/authors/${author.id}` }) %> 
        </div>
    </div>
<% }) %> 