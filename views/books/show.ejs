<h2 class="page-header"><%= book.title %> </h2>
<div class="book-details">
    <div>
        <img class="book-cover" src="<%= book.coverImagePath %>" width="100" height="150" alt="">
    </div>
    <div class="book-details-grid">
        <div class="book-details-label">Author:</div>
        <div><%= book.author.name %></div>
        <div class="book-details-label">Publish Date:</div>
        <div><%= book.publishDate.toDateString() %></div>
        <div class="book-details-label">Page Count:</div>
        <div><%= book.pageCount %></div>
        <div class="book-details-label">Description:</div>
        <div><%= book.description %></div>
    </div>
</div>

<div class="fields fields-right button-row">
    <a class="button primary" href="/books/<%= book.id %>/edit">Edit</a>
    <%- include('../inc/deleteForm', {url: `/books/${book.id}`}) %> 
    <a class="button primary" href="/authors/<%= book.author.id %>/edit">View Author</a>
</div>